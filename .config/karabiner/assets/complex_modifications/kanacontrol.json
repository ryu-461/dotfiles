{
  "title": "KanaControl",
  "rules": [
    {
      "description": "かなキーを補助キー（Option）に設定",
      "manipulators": [
        {
          "from": {
            "key_code": "japanese_kana",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "right_option"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "japanese_kana"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "かな + J / K  = ページスクロール",
      "manipulators": [
        {
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": ["right_option"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "page_down"
            },
            {
              "key_code": "page_down",
              "modifiers": "right_option"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "k",
            "modifiers": {
              "mandatory": ["right_option"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "page_up"
            },
            {
              "key_code": "page_up",
              "modifiers": "right_option"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "かな + H / L = ⌘ ↔",
      "manipulators": [
        {
          "from": {
            "key_code": "h",
            "modifiers": {
              "mandatory": ["right_option"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "right_arrow",
              "modifiers": "right_command"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "l",
            "modifiers": {
              "mandatory": ["right_option"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "right_arrow",
              "modifiers": "right_command"
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
